  <%= render 'layouts/clientmanage' %>
  <%= render 'layouts/creategroup' %>
  <table class="table table-hover table-auto">
      <thead>
        <tr>
          <th>组名</th>
          <th width="7%" class="text-center">操作</th>
        </tr>
      </thead>
      <tbody>
      	<% @groups.each do |g| %>
      	<tr>
      	  <td><%= g.name %></td>
           <td>
            <%= link_to "编辑", edit_group_path(g) %>
            <%= link_to "删除", group_path(g), method: :delete, data: { confirm: "Are you sure?"} %>
          </td>
      	</tr>
      	<% end %>
      </tbody>
  </table>