<%= render 'shared/errors', obj: @pelco %>


<div class='row'>
<div class='col-xs-12'>

<%= form_for(@pelco, :html => { class: "form-horizontal", role: "form" }) do |f| %>
<div class="form-group">
<div class="control-label col-sm-2">
   	  <%= f.label :ip %>
</div>
<div class="col-sm-8">
   	  <%= f.text_field :ip, class:"form-control", placeholder: "Ip of pelco", autofocus: true %>
</div>
</div>

<div class="form-group">
<div class="control-label col-sm-2">
   	  <%= f.label :camera_name %>
</div>
<div class="col-sm-8">
   	  <%= f.text_area :camera_name, rows: 10, class: "form-control", placeholder: "Camera name of pelco" %>
</div>
</div>

<div class="form-group">

<div class="col-sm-offset-2 col-sm-10">

     <%= f.submit class: 'btn btn-primary btn-lg' %>

</div>

</div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">

[ <%= link_to "Cancel request and return to pelcos listing", pelcos_path %> ]

</div>
</div>
</div>


