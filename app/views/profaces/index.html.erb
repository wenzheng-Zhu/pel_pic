
  <%= render 'layouts/createproface' %>
  <table class="table table-hover table-auto">
      <thead>
        <tr>
          <th>名称</th>
          <th>ip</th>
          <th>端口</th>
          <th width="7%" class="text-center">操作</th>
        </tr>
      </thead>
      <tbody>
      	<% @profaces.each do |p| %>
      	<tr>
      	  <td><%= p.name %></td>
      	  <td><%= p.pro_ip %></td>
          <td><%= p.pro_port %></td>
          <td>
            <%= link_to "编辑", edit_proface_path(p) %>
            <%= link_to "删除", proface_path(p), method: :delete, data: { confirm: "Are you sure?"} %>
          </td>
      	</tr>
      	<% end %>
      </tbody>
  </table>